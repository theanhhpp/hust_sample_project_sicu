<body>

    <!-- Navigation -->

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Thumbnail Gallery</h1>
            </div>
            <% @posts = Post.all.order('created_at DESC')%>
            <% @posts.each do |post| %>
                <div class="col-lg-3 col-md-4 col-xs-6 thumbnail">
                    <%=link_to (image_tag post.image.url(:medium)), post_path(post) %> <br/>
                </div>
            <%end%>
        </div>
        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy SICU</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>