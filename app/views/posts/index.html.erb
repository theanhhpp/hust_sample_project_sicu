<div class="container">
    <div class="col-xs-8 col-xs-offset-2" style="padding: 0px;">
        <% if @posts.present? %>
           <%= render 'posts'%>
        <% else %>
          <div class="jumbotron"> <h1 class="center">There are no posts containing the term(s) <%= params[:search] %>.</h1> </div>
        <% end %>
        <div class="flickr_pagination">
            <%= will_paginate @posts %>
        </div>
    </div>
</div>