<div class="container center" style="margin-bottom: 10vh;">
  <% if user_signed_in? %>
    <%= render 'post', post: @post %>

    <% if @post.user.id == current_user.id %>
        <%= link_to "Edit post", edit_post_path(@post), class: "btn btn-primary" %>
        <%= link_to "Delete post", post_path(@post), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
    <%end%>
  <%else%>
    <%= image_tag @post.image.url%>
    <%= @post.caption %>
  <%end%>
</div>