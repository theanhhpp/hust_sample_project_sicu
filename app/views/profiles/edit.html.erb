<div class="container center" style="margin-top:100px">
    <div class="thumbnail col-xs-8 col-xs-offset-2" style="padding: 10px;">
        <%= form_for @user, url: {action: "update"}, html: { multipart: true } do |f| %>
            <%= profile_avatar_select_profiles(@user) %>
            <h4>Change your profile image: </h4>
            <div class="col-xs-8 col-xs-offset-4"><%= f.file_field :avatar, onChange: 'loadAvatarprofile(event)' %></div>
            <h4>Update your information:</h4>
            <%= f.text_area :info, rows: 1, label: false, class: 'form-control form-margin', placeholder: 'Your info' %>
            <%= f.submit "Update Profile", class: 'btn btn-success' %>
        <%end%>
    </div>
</div>